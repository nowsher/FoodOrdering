<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <ImageView
        android:id="@+id/detImg"
        android:layout_width="0dp"
        android:layout_height="370dp"
        android:src="@drawable/chesburgimg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_Name_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Name"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detImg" />

    <TextView
        android:id="@+id/tv_Name_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="CheeseBurger"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/tv_Name_lbl"
        app:layout_constraintTop_toTopOf="@id/tv_Name_lbl" />

    <TextView
        android:id="@+id/tv_price_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Price"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/tv_Name_lbl"
        app:layout_constraintTop_toBottomOf="@id/tv_Name_lbl" />

    <TextView
        android:id="@+id/tv_price_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="$5.0"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/tv_price_lbl"
        app:layout_constraintTop_toTopOf="@id/tv_price_lbl" />

    <TextView
        android:id="@+id/tv_des_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Description"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/tv_price_lbl"
        app:layout_constraintTop_toBottomOf="@id/tv_price_lbl" />

    <TextView
        android:id="@+id/tv_des_val"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:text="Contrary to popular belief, Lorem Ipsum is not simply rndom text. It has roots in a piece of classical Latin literature from 45 BC, making it over 2000 years old. Richard McClintock, a Latin professor at Hampden-Sydney College in Virginia Contrary Virginia"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_add_bag"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/tv_des_lbl"
        app:layout_constraintTop_toBottomOf="@id/tv_des_lbl"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_add_bag"
        android:layout_width="413dp"
        android:layout_height="42dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#F6BB06"
        android:text="Add To Bag"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

